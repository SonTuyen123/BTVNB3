<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity7">

    <TextView
        android:id="@+id/V1"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:background="#c4c4c4"
        android:gravity="center"
        android:text="1"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/V2"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:background="#803334"
        android:gravity="center"
        android:text="2"
        android:textSize="40sp"
        app:layout_constraintStart_toEndOf="@+id/V1"
        app:layout_constraintTop_toBottomOf="@+id/V1" />

    <TextView
        android:id="@+id/V3"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#f4b9b8"
        android:gravity="center"
        android:text="3"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="@+id/V1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/V2" />

    <TextView
        android:id="@+id/VV"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="#c4c4c4"
        app:layout_constraintBottom_toBottomOf="@+id/V3"
        app:layout_constraintStart_toEndOf="@+id/V3" />

    <TextView
        android:id="@+id/V4"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="#312525"
        android:gravity="center"
        android:paddingTop="40dp"
        android:paddingRight="40dp"
        android:text="4"
        android:textColor="@android:color/white"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="@+id/V3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/V3" />

    <TextView
        android:id="@+id/V5"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:background="#2db3ce"
        android:gravity="center"
        android:paddingTop="40dp"
        android:paddingRight="40dp"
        android:text="5"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/V4"
        app:layout_constraintStart_toEndOf="@+id/V4"
        app:layout_constraintTop_toBottomOf="@+id/VV" />

    <TextView
        android:id="@+id/V6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#151443"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/V5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/V5"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/V7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#4dc868"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/V6"
        app:layout_constraintTop_toBottomOf="@+id/V5" />
</androidx.constraintlayout.widget.ConstraintLayout>